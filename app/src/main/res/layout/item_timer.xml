<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/indicator_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:layout_weight="1"
            tools:src="@drawable/ic_timer_on_indicator"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="30sp"
            android:fontFamily="@font/machine_gunk"
            android:gravity="center_horizontal"
            tools:text="00:00:00"/>

        <ImageView
            android:id="@+id/progress_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/ic_mock_progress"
            android:layout_weight="1"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/timer_control_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_start"
            android:textSize="20sp"
            android:fontFamily="@font/machine_gunk"
            android:elevation="6dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/delete_timer_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/ic_delete_timer"
            android:layout_weight="1"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
